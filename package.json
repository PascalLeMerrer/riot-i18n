{
  "name": "riot-i18n",
  "version": "0.1.2",
  "description": "Riot JS internationalization tag and mixin",
  "main": "riot-i18n.min.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "nodeunit",
    "minify": "uglifyjs index.js --compress --screw-ie8 --mangle > riot-i18n.min.js",
    "pub-build": "npm run minify && npm run test",
    "pub-git": "git add -A && git commit -m \"build\" && git push && npm version patch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/any-code/riot-i18n.git"
  },
  "keywords": [
    "riot-i18n",
    "riot",
    "riotjs",
    "internationalization",
    "internationalisation",
    "localisation",
    "localization",
    "i18n",
    "L10n",
    "g11n"
  ],
  "author": "Lee Tagg <lee@anycode.io>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/any-code/riot-i18n/issues"
  },
  "homepage": "https://github.com/any-code/riot-i18n#readme",
  "devDependencies": {
    "nodeunit": "^0.9.1"
  },
  "dependencies": {
    "riot": "^2.3.11"
  }
}
